{
  "info": {
    "_postman_id": "22222222-2222-2222-2222-222222222222",
    "name": "Memo Backend – Word Sets, Progress & Collections",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001"
    },
    {
      "key": "userId",
      "value": "1"
    },
    {
      "key": "wordSetId",
      "value": "1"
    },
    {
      "key": "wordId",
      "value": "1"
    },
    {
      "key": "collectionId",
      "value": ""
    },
    {
      "key": "fromLang",
      "value": "en"
    },
    {
      "key": "toLang",
      "value": "tr"
    },
    {
      "key": "difficulty",
      "value": "easy"
    }
  ],
  "item": [
    {
      "name": "Word Sets",
      "item": [
        {
          "name": "List Word Sets (by from/to)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/word-sets?from={{fromLang}}&to={{toLang}}",
              "host": ["{{baseUrl}}"],
              "path": ["word-sets"],
              "query": [
                {
                  "key": "from",
                  "value": "{{fromLang}}"
                },
                {
                  "key": "to",
                  "value": "{{toLang}}"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "List Word Sets (by difficulty + from/to)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/word-sets?difficulty={{difficulty}}&from={{fromLang}}&to={{toLang}}",
              "host": ["{{baseUrl}}"],
              "path": ["word-sets"],
              "query": [
                {
                  "key": "difficulty",
                  "value": "{{difficulty}}"
                },
                {
                  "key": "from",
                  "value": "{{fromLang}}"
                },
                {
                  "key": "to",
                  "value": "{{toLang}}"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Words for Word Set (session)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.words && json.words.length > 0) {",
                  "  const first = json.words[0];",
                  "  if (first.wordId) {",
                  "    pm.variables.set('wordId', first.wordId);",
                  "    console.log('Saved wordId from first word:', first.wordId);",
                  "  }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/word-sets/{{wordSetId}}/words?from={{fromLang}}&to={{toLang}}",
              "host": ["{{baseUrl}}"],
              "path": ["word-sets", "{{wordSetId}}", "words"],
              "query": [
                {
                  "key": "from",
                  "value": "{{fromLang}}"
                },
                {
                  "key": "to",
                  "value": "{{toLang}}"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Progress (Words)",
      "item": [
        {
          "name": "Set Word Status – Known (swipe right)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "name": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": {{userId}},\n  \"fromLanguageCode\": \"{{fromLang}}\",\n  \"toLanguageCode\": \"{{toLang}}\",\n  \"status\": \"known\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/words/{{wordId}}/progress",
              "host": ["{{baseUrl}}"],
              "path": ["words", "{{wordId}}", "progress"]
            }
          },
          "response": []
        },
        {
          "name": "Set Word Status – Review (swipe left)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "name": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": {{userId}},\n  \"fromLanguageCode\": \"{{fromLang}}\",\n  \"toLanguageCode\": \"{{toLang}}\",\n  \"status\": \"review\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/words/{{wordId}}/progress",
              "host": ["{{baseUrl}}"],
              "path": ["words", "{{wordId}}", "progress"]
            }
          },
          "response": []
        },
        {
          "name": "Set Word Status – New (reset)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "name": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": {{userId}},\n  \"fromLanguageCode\": \"{{fromLang}}\",\n  \"toLanguageCode\": \"{{toLang}}\",\n  \"status\": \"new\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/words/{{wordId}}/progress",
              "host": ["{{baseUrl}}"],
              "path": ["words", "{{wordId}}", "progress"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Collections (Custom Decks)",
      "item": [
        {
          "name": "List All Collections",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/collections?userId={{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["collections"],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "List Language Collections (scope=LANGUAGE)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/collections?userId={{userId}}&scope=LANGUAGE",
              "host": ["{{baseUrl}}"],
              "path": ["collections"],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                },
                {
                  "key": "scope",
                  "value": "LANGUAGE"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "List Global Collections (scope=GLOBAL)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/collections?userId={{userId}}&scope=GLOBAL",
              "host": ["{{baseUrl}}"],
              "path": ["collections"],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                },
                {
                  "key": "scope",
                  "value": "GLOBAL"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Language Collection (e.g. Turkish Collection)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.id) {",
                  "  pm.variables.set('collectionId', json.id);",
                  "  console.log('Saved collectionId:', json.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "name": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": {{userId}},\n  \"name\": \"My Turkish Words\",\n  \"scope\": \"LANGUAGE\",\n  \"languageCode\": \"{{toLang}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/collections",
              "host": ["{{baseUrl}}"],
              "path": ["collections"]
            }
          },
          "response": []
        },
        {
          "name": "Create Global Collection (e.g. hardtolearn)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.id) {",
                  "  pm.variables.set('collectionId', json.id);",
                  "  console.log('Saved collectionId (GLOBAL):', json.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "name": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": {{userId}},\n  \"name\": \"hardtolearn\",\n  \"scope\": \"GLOBAL\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/collections",
              "host": ["{{baseUrl}}"],
              "path": ["collections"]
            }
          },
          "response": []
        },
        {
          "name": "Add Word to Current Collection (swipe down)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "name": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": {{userId}},\n  \"wordId\": {{wordId}}\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/collections/{{collectionId}}/items",
              "host": ["{{baseUrl}}"],
              "path": ["collections", "{{collectionId}}", "items"]
            }
          },
          "response": []
        },
        {
          "name": "Get Words in Collection (session view)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/collections/{{collectionId}}/words?from={{fromLang}}&to={{toLang}}",
              "host": ["{{baseUrl}}"],
              "path": ["collections", "{{collectionId}}", "words"],
              "query": [
                {
                  "key": "from",
                  "value": "{{fromLang}}"
                },
                {
                  "key": "to",
                  "value": "{{toLang}}"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete Collection",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/collections/{{collectionId}}?userId={{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["collections", "{{collectionId}}"],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
