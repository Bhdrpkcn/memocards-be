{
  "info": {
    "_postman_id": "22222222-2222-2222-2222-222222222222",
    "name": "Memo Backend â€“ Correct Progress & Custom Decks",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001"
    },
    {
      "key": "userId",
      "value": "1"
    },
    {
      "key": "deckId",
      "value": "1"
    },
    {
      "key": "cardId",
      "value": "1"
    },
    {
      "key": "randomCardId",
      "value": ""
    },
    {
      "key": "customDeckId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Decks",
      "item": [
        {
          "name": "Get All Decks",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/decks",
              "host": ["{{baseUrl}}"],
              "path": ["decks"]
            }
          },
          "response": []
        },
        {
          "name": "Get Deck By Id",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/decks/{{deckId}}",
              "host": ["{{baseUrl}}"],
              "path": ["decks", "{{deckId}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Cards",
      "item": [
        {
          "name": "Get Cards (All)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/decks/{{deckId}}/cards",
              "host": ["{{baseUrl}}"],
              "path": ["decks", "{{deckId}}", "cards"]
            }
          },
          "response": []
        },
        {
          "name": "Get Cards (Known)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/decks/{{deckId}}/cards?userId={{userId}}&status=known",
              "host": ["{{baseUrl}}"],
              "path": ["decks", "{{deckId}}", "cards"],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                },
                {
                  "key": "status",
                  "value": "known"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Cards (Review)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/decks/{{deckId}}/cards?userId={{userId}}&status=review",
              "host": ["{{baseUrl}}"],
              "path": ["decks", "{{deckId}}", "cards"],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                },
                {
                  "key": "status",
                  "value": "review"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Progress",
      "item": [
        {
          "name": "Set Card Status (Known)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "name": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": {{userId}},\n  \"status\": \"known\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cards/{{cardId}}/progress",
              "host": ["{{baseUrl}}"],
              "path": ["cards", "{{cardId}}", "progress"]
            }
          },
          "response": []
        },
        {
          "name": "Set Card Status (Review)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "name": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": {{userId}},\n  \"status\": \"review\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cards/{{cardId}}/progress",
              "host": ["{{baseUrl}}"],
              "path": ["cards", "{{cardId}}", "progress"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Custom Decks",
      "item": [
        {
          "name": "List Custom Decks for Parent Deck",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/decks/{{deckId}}/custom-decks?userId={{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["decks", "{{deckId}}", "custom-decks"],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Custom Deck \"Learning\" (under parent deck)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.id) {",
                  "  pm.variables.set(\"customDeckId\", json.id);",
                  "  console.log(\"Saved customDeckId:\", json.id);",
                  "} else {",
                  "  console.log(\"No id returned from create custom deck\");",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "name": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": {{userId}},\n  \"name\": \"Learning\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/decks/{{deckId}}/custom-decks",
              "host": ["{{baseUrl}}"],
              "path": ["decks", "{{deckId}}", "custom-decks"]
            }
          },
          "response": []
        },
        {
          "name": "Get Cards in Custom Deck (All)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/decks/{{customDeckId}}/cards",
              "host": ["{{baseUrl}}"],
              "path": ["decks", "{{customDeckId}}", "cards"]
            }
          },
          "response": []
        },
        {
          "name": "Add Random Card from Parent Deck to Custom Deck",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.sendRequest({",
                  "  url: pm.variables.get(\"baseUrl\") + \"/decks/\" + pm.variables.get(\"deckId\") + \"/cards\",",
                  "  method: \"GET\"",
                  "}, function (err, res) {",
                  "  if (err) {",
                  "    console.log(\"Error fetching cards:\", err);",
                  "    return;",
                  "  }",
                  "",
                  "  const cards = res.json();",
                  "",
                  "  if (!Array.isArray(cards) || cards.length === 0) {",
                  "    console.log(\"No cards found for this deck\");",
                  "    return;",
                  "  }",
                  "",
                  "  const randomIndex = Math.floor(Math.random() * cards.length);",
                  "  const randomCard = cards[randomIndex];",
                  "",
                  "  pm.variables.set(\"randomCardId\", randomCard.id);",
                  "  console.log(\"Selected random card id:\", randomCard.id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "name": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": {{userId}},\n  \"sourceCardId\": {{randomCardId}}\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/decks/custom-decks/{{customDeckId}}/cards",
              "host": ["{{baseUrl}}"],
              "path": ["decks", "custom-decks", "{{customDeckId}}", "cards"]
            }
          },
          "response": []
        },
        {
          "name": "Remove Card from Custom Deck",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/decks/custom-decks/{{customDeckId}}/cards/{{cardId}}?userId={{userId}}",
              "host": ["{{baseUrl}}"],
              "path": [
                "decks",
                "custom-decks",
                "{{customDeckId}}",
                "cards",
                "{{cardId}}"
              ],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete Custom Deck \"Learning\"",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/decks/custom-decks/{{customDeckId}}?userId={{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["decks", "custom-decks", "{{customDeckId}}"],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
